---
import house from '../assets/house.svg';
import book from '../assets/book.svg';
import lessons from '../assets/lessons.svg';
import linkedin from '../assets/linkedin.svg';
import moon from '../assets/moon.svg';
import language from '../assets/language.svg';
import projects from '../assets/projects.svg';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        :root {
            --navbar-bg: rgba(46, 46, 46, 0.65); /* Fondo negro translúcido (Sonoma Style) */
            --navbar-shadow: rgba(0, 0, 0, 0.4); /* Sombra translúcida */
            --icon-color: #e0e0e0; /* Color de íconos */
            --icon-hover-bg: rgba(80, 80, 80, 0.4); /* Fondo en hover */
            --divider-color: rgba(158, 154, 154, 0.7); /* Color de divisores */
        }

        body {
            margin: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background-color: #f9f9f9;
            color: #333;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .dark body {
            background-color: #272727;
            color: #e0e0e0;
        }

        .navbar {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            align-items: center;
            background-color: var(--navbar-bg);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            box-shadow: 0 4px 6px var(--navbar-shadow);
            border-radius: 16px;
            padding: 8px 16px;
            width: 90%;
            max-width: 450px;
            z-index: 1000;
        }

        .navbar-item {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 48px;
            height: 48px;
            margin: 0 8px;
            border-radius: 12px;
            background-color: transparent;
            color: var(--icon-color);
            transition: background-color 0.3s ease, transform 0.3s ease;
            cursor: pointer;
        }

        .navbar-item img {
            width: 24px;
            height: 24px;
        }

        .navbar-item:hover {
            background-color: var(--icon-hover-bg);
            transform: scale(1.2);
        }

        .tooltip {
            position: absolute;
            bottom: 110%;
            left: 50%;
            transform: translateX(-50%);
            background-color: rgba(0, 0, 0, 0.85);
            color: white;
            font-size: 12px;
            padding: 4px 8px;
            border-radius: 4px;
            white-space: nowrap;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease;
        }

        .navbar-item:hover .tooltip {
            opacity: 1;
        }

        .navbar-divider {
            height: 38px;
            width: 2px;
            background: var(--divider-color);
            margin: 0 16px;
        }
    </style>
</head>
<body class="relative bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-200 transition-colors">
    <div class="navbar">
        <!-- Home Icon -->
        <div class="navbar-item" title="Home">
            <a href="/">
                <img src={house.src} alt="Home" />
            </a>
            <div class="tooltip">Home</div>
        </div>

        <!-- Formation Icon -->
        <div class="navbar-item" title="Formation">
            <a href="/formation">
                <img src={book.src} alt="Formation" />
            </a>
            <div class="tooltip">Formation</div>
        </div>

        <!-- Lessons Icon -->
        <div class="navbar-item" title="Lessons">
            <a href="/lessons">
                <img src={lessons.src} alt="Lessons" />
            </a>
            <div class="tooltip">Lessons</div>
        </div>

        <!-- Projects Icon -->
        <div class="navbar-item" title="Projects">
            <a href="/projects">
                <img src={projects.src} alt="Projects" />
            </a>
            <div class="tooltip">Projects</div>
        </div>

        <!-- LinkedIn Icon -->
        <div class="navbar-item" title="LinkedIn">
            <a href="https://www.linkedin.com/in/erikaalexandrah/" target="_blank">
                <img src={linkedin.src} alt="LinkedIn" />
            </a>
            <div class="tooltip">LinkedIn</div>
        </div>

        <!-- Divider -->
        <div class="navbar-divider"></div>

        <!-- Dark Mode Toggle -->
        <div class="navbar-item">
            <button id="dark-mode-toggle" aria-label="Toggle Dark Mode">
                <img src={moon.src} alt="Dark Mode" />
            </button>
            <div class="tooltip">Dark Mode</div>
        </div>

        <!-- Language Toggle -->
        <div class="navbar-item" title="Settings">
            <button>
                <img src={language.src} alt="Language" />
            </button>
            <div class="tooltip">Language</div>
        </div>
    </div>

    <script>
        // Fix for potential null reference
        const darkModeToggle = document.getElementById('dark-mode-toggle');
        if (darkModeToggle) {
            darkModeToggle.addEventListener('click', () => {
                document.body.classList.toggle('dark');
            });
        }
    </script>
</body>
</html>
